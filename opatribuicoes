#include <stdio.h>;
int main() {
    /*
    atribuição simples = 
    atribuição e soma +=
    atribuição e subtração -=
    atribuição e multiplicação *=
    atribuição e divisão /=
    */
   int num1 = 10, num2 = 5, resultado = 20;
    printf("Resultado %d\n", resultado);

    //resultado (20) + 10 = 30
    resultado += 10;
    printf("Resultado %d\n", resultado);

    //resultado (30) - num1 (10) = 20
    resultado -= num1;
    printf("Resultado %d\n", resultado);

    //resultado (20) * num2 (5) = 100
    resultado *= num2;
    printf("Resultado %d\n", resultado);

    //resultado (100) / num1 (10) = 10
    resultado /= num1;
    printf("Resultado %d\n", resultado);

}
